{
    "compilerOptions": {
        "skipLibCheck": true,
        "noErrorTruncation": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist",
        "strictNullChecks": true
    },
    "include": [
        "tests/modules.d.ts",
        "**/*.steps.ts",
        "./tests/features/**/*.ts"
    ]
}