{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.test.ts",
    "tests/modules.d.ts",
    "tests/contexts/**/*.ts",
    "tests/features/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "tests/components/",
    "tests/e2e/",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "**/*.steps.ts",
    "./cypress.config.ts",
    "./cypress.config.js",
    "./node_modules",
    ".github"
  ]
}
