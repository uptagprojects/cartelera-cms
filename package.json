{
  "name": "cartelera",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "url": "https://github.com/uptagprojects/cartelera"
  },
  "engines": {
    "node": ">=20.8.0",
    "npm": ">=10.1.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build && npm run configure-rabbitmq",
    "lint": "next lint",
    "start": "next start",
    "configure-rabbitmq": "dotenvx run -- ts-node ./src/scripts/configure-rabbitmq.ts",
    "consume-rabbitmq": "dotenvx run -- ts-node ./src/scripts/consume-rabbitmq.ts",
    "format": "prettier --write src/**/*.ts{,x}",
    "test": "npm run test:unit && npm run test:integration && npm run test:acceptance",
    "test:unit": "npm run test:jest tests/contexts/**/*/application",
    "test:integration": "npm run test:jest tests/contexts/**/*/infrastructure",
    "test:acceptance": "npm run build && npm run configure-rabbitmq && npm run test:features",
    "test:features": "NODE_ENV=test cucumber-js -c cucumber.config.js",
    "test:jest": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.35.0",
    "@gsap/react": "^2.1.2",
    "@lottiefiles/dotlottie-react": "^0.12.3",
    "@openfga/sdk": "^0.8.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "amqplib": "^0.10.5",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "diod": "^3.0.0",
    "dropbox": "^10.34.0",
    "gsap": "^3.12.7",
    "javascript-time-ago": "^2.5.11",
    "lucide-react": "^0.475.0",
    "migrate": "^2.1.0",
    "next": "^15.1.6",
    "next-auth": "5.0.0-beta.25",
    "next-axiom": "^1.9.1",
    "node-mailjet": "^6.0.6",
    "nodemailer": "^6.10.0",
    "octagon-ui": "^1.0.11",
    "otp-generator": "^4.0.1",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "qs": "^6.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "remove-markdown": "^0.6.0",
    "resend": "^4.1.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@cucumber/cucumber": "^11.2.0",
    "@faker-js/faker": "^9.4.0",
    "@playwright/test": "^1.50.1",
    "@types/amqplib": "^0.10.6",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "@types/qs": "^6.9.18",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.0",
    "eslint-config-codely": "^4.4.1",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
